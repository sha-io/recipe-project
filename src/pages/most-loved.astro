---
import BaseLayout from "../layouts/BaseLayout.astro";
import CardCollection from "../components/CardCollection.astro";
import ImageCard from "../components/ImageCard.astro";
import PageHeader from "../components/PageHeader.astro";

import recipes from "../data/recipes";
const slicedRecipes = recipes.slice(1, 4);
---

<BaseLayout title="Most Loved">
  <PageHeader
    heading="Most Loved"
    imgSrc="pasta-with-tomatao-basil.jpg"
    title="Spaghetti Aglio e Olio"
    description=`
            Spaghetti Aglio e Olio is a simple yet flavorful Italian pasta dish
            made with garlic, olive oil, and red pepper flakes. Quick to prepare
            and deeply satisfying, it’s a go-to recipe for busy nights or when
            you want comfort food with minimal ingredients. The garlic-infused
            oil and subtle heat make every bite rich, bold, and delicious.`
    author="Maria Rosé"
    duration="30 Minutes"
  />
  <CardCollection title="Vegetatrian">
    {
      slicedRecipes.map((recipe) => {
        return (
          <ImageCard
            name={recipe.title}
            link={`/recipes/${recipe.slug}`}
            imgSrc={recipe.imgSrc}
            rating={recipe.rating}
          />
        );
      })
    }
  </CardCollection>

  <CardCollection title="Easy to Cook">
    {
      slicedRecipes.map((recipe) => {
        return (
          <ImageCard
            name={recipe.title}
            link={`/recipes/${recipe.slug}`}
            imgSrc={recipe.imgSrc}
            rating={recipe.rating}
          />
        );
      })
    }
  </CardCollection>
</BaseLayout>
