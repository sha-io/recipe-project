---
import AuthForm from "../../components/AuthForm.astro";
import AuthLayout from "../../layouts/AuthLayout.astro";

export function getStaticPaths() {
  return [
    {
      params: {
        mode: "login",
      },
      props: {
        title: "Login",
        header: "Welcome Back!",
        btnName: "Login",
        isLogin: true,
      },
    },
    {
      params: {
        mode: "sign-up",
      },
      props: {
        title: "Sign Up",
        header: "Create an Account",
        btnName: "Join Now",
        isLogin: false,
      },
    },
  ];
}

const { title, header, btnName, isLogin } = Astro.props;
---

<AuthLayout title={title}>
  <AuthForm
    action="/"
    header={header}
    btnName={btnName}
    isLogin={isLogin}
  />
</AuthLayout>
